<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <section id = "pet-<%=pet.id%>">
    <img src= <%= pet.image_url %>>
    <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
    <h2><%= pet.description %></h2>
    <h2><%= pet.approximate_age%></h2>
    <h2><%= pet.sex %></h2>
    <h2><%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %></h2>

    <%= link_to "Delete This Pet", "/pets/#{pet.id}", method: :delete %>
    <%= link_to "Edit This Pet", "/pets/#{pet.id}/edit" %>
  </section>

<% end %>
<% if @shelter %>

   <%= link_to "Add new pet", "/shelters/#{@shelter.id}/pets/new" %>
<% end %>
