<%= form_tag "/pets/#{@pet.id}", method: :patch do %>

<%= label_tag :image_url %>
<%= text_field_tag :image_url %>

<%= label_tag :name %>
<%= text_field_tag :name %>

<%= label_tag :description %>
<%= text_field_tag :description %>

<%= label_tag :approximate_age %>
<%= text_field_tag :approximate_age %>

<%= label_tag :sex %>
<%= text_field_tag :sex %>

<%= submit_tag "Submit updated pet information" %>

<% end %>
